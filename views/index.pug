extends layout

block content
  h1 Welcome To My Color Changer
  form(method = "POST" action = "/")
    input(type = "color" name = "colorPicker" id = "picker" value = `${color}`)
    br
    label(for = "picker") Click Here!
    br
    input(type = "color" name = "textColorPicker" id = "textPicker" value = `${textColor}`)
    br
    label(for = "textPicker") Click Here!
    br
    button(type = 'submit') Submit
  form(method = "POST" action = "/random")
    button(type = "submit") Random